<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet-mapping>
        <servlet-name>insert</servlet-name>
        <url-pattern>/ins</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>insert</servlet-name>
        <servlet-class>servlets.student.insertStudent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/del</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>servlets.student.deleteStudent</servlet-class>
    </servlet>

    <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/up</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>servlets.student.updateStudent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>gender</servlet-name>
        <url-pattern>/gen</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>gender</servlet-name>
        <servlet-class>servlets.student.gender</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>setGenderStudent</servlet-name>
        <url-pattern>/stg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>setGenderStudent</servlet-name>
        <servlet-class>servlets.student.setGenderStudent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getGroups</servlet-name>
        <url-pattern>/getGroups</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getGroups</servlet-name>
        <servlet-class>servlets.student.getGroups</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>setGroup</servlet-name>
        <url-pattern>/setGroup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>setGroup</servlet-name>
        <servlet-class>servlets.student.setGroup</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>setDate</servlet-name>
        <url-pattern>/setDate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>setDate</servlet-name>
        <servlet-class>servlets.student.setDate</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>selectByCriterion</servlet-name>
        <url-pattern>/selByCrit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>selectByCriterion</servlet-name>
        <servlet-class>servlets.student.selectByCriterion</servlet-class>
    </servlet>

</web-app>